<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panda_hand">
    <xacro:include filename="$(find mmint_franka_description)/robots/hands/gamma.xacro"/>

    <xacro:macro name="panda_hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' link:='gamma'">

        <!-- <xacro:if value="${link == 'gamma'}">
            <xacro:gamma ns="${ns}" connected_to="${connected_to}" rpy="${rpy}" xyz="${xyz}"/>

            <joint name="${ns}_hand_joint" type="fixed">
                <parent link="${ns}_ft_origin"/>
                <child link="${ns}_hand"/>
                <origin xyz="0 0 0.0079" rpy="0 0 0"/>
            </joint>
        </xacro:if> -->
        <!-- <xacro:unless value="${link == 'gamma'}">
            <joint name="${ns}_hand_joint" type="fixed">
                <parent link="${connected_to}"/>
                <child link="${ns}_hand"/>
                <origin xyz="${xyz}" rpy="${rpy}"/>
            </joint>
        </xacro:unless> -->
        <!--        <xacro:gamma ns="${ns}" connected_to="${connected_to}" rpy="${rpy}" xyz="${xyz}"/>-->
        <joint name="${ns}_hand_joint" type="fixed">
                <parent link="${connected_to}"/>
                <child link="${ns}_hand"/>
                <origin xyz="${xyz}" rpy="${rpy}"/>
            </joint>

        <link name="${ns}_hand">
            <visual>
                <geometry>
                    <mesh filename="package://franka_description/meshes/visual/hand.dae"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://franka_description/meshes/collision/hand.stl"/>
                </geometry>
            </collision>
        </link>
        <link name="${ns}_leftfinger">
            <visual>
                <origin rpy="0 0 0" xyz="0 0.01325 0"/>
                <geometry>
                    <mesh filename="package://mmint_franka_description/meshes/visual/knuckle.stl"/>
                </geometry>
                <material name="grey"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0.01325 0"/>
                <geometry>
                    <mesh filename="package://mmint_franka_description/meshes/collision/knuckle.stl"/>
                </geometry>
            </collision>
        </link>
        <link name="${ns}_rightfinger">
            <visual>
                <origin rpy="0 0 ${pi}" xyz="0 -0.01325 0"/>
                <geometry>
                    <mesh filename="package://mmint_franka_description/meshes/visual/knuckle.stl"/>
                </geometry>
                <material name="grey"/>
            </visual>
            <collision>
                <origin rpy="0 0 ${pi}" xyz="0 -0.01325 0"/>
                <geometry>
                    <mesh filename="package://mmint_franka_description/meshes/collision/knuckle.stl"/>
                </geometry>
            </collision>
        </link>
        <joint name="${ns}_finger_joint1" type="prismatic">
            <parent link="${ns}_hand"/>
            <child link="${ns}_leftfinger"/>
            <origin xyz="0 0 0.0584" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
        </joint>
        <joint name="${ns}_finger_joint2" type="prismatic">
            <parent link="${ns}_hand"/>
            <child link="${ns}_rightfinger"/>
            <origin xyz="0 0 0.0584" rpy="0 0 0"/>
            <axis xyz="0 -1 0"/>
            <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
            <mimic joint="${ns}_finger_joint1"/>
        </joint>
        <link name="${ns}_gripper_origin">
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0"/>
                <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
            </inertial>
        </link>
        <joint name="${ns}_gripper" type="fixed">
            <parent link="${ns}_hand"/>
            <child link="${ns}_gripper_origin"/>
            <origin rpy="0 0 0" xyz="0 0 0.1034"/>
        </joint>
    </xacro:macro>
</robot>
